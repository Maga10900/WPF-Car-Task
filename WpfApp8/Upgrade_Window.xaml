<Window x:Class="WpfApp8.Upgrade_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp8"
        mc:Ignorable="d"
        Title="Upgrade_Window" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label FontSize="30" Content="Make:"/>
            <TextBox Height="40" FontSize="30" Text="{Binding Car.Make}"/>
            <Label FontSize="30" Content="Vendor:"/>
            <TextBox Height="40" FontSize="30" Text="{Binding Car.Vendor}"/>
            <Label FontSize="30" Content="Year:"/>
            <TextBox Height="40" FontSize="30" Text="{Binding Car.Year}"/>

            <StackPanel Orientation="Horizontal" Margin="0 50 0 0">
                <Button FontSize="20" Content="{Binding CNT}" Height="50" Width="150" FontWeight="Bold" Click="Button_Click"/>
                
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
